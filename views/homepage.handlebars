            <img src="/images/vaultboy.jpg" class="img-fluid w-50">
        </div>
        {{#if loggedIn}}
        <div class="col-md-5 text-light align-self-center">
            <div class="row align-items-center">
                <a href="/login">
                    <button type="button" class="login">Logout</button>
                </a>
            </div>
        </div>
        {{else}}
        <div class="col-md-5 text-light align-self-center">
            <div class="row align-items-center">
                <a href="/login">
                    <button type="button" class="login">Login</button>
                </a>
            </div>
        </div>
        {{/if}}
    </div>
</div>